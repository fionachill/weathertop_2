<form class="box" action="/station/{{station._id}}/addreading" method="POST">
    <label>Enter Reading</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input class="input" type="text" placeholder ="Enter Weather Code" name="code">  
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Temperature in Celsius" name="temp"> 
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter the Windspeed" name="wSpeed">
            </div>
        </div>
    </div>
    <button class="button is-primary">Add Reading</button>
</form>